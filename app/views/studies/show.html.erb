<div class="wrap">

  <p class="link"><%= link_to 'Back to Studies', studies_path %></p>
  <div class="flex">

    <p class="blue-link"><%= link_to 'Edit Study Name', edit_study_path(@study) %></p>
    <p class="red-link"><%= link_to "Delete Study", @study, method: :delete, data: { confirm: "Are you sure?" } %></p>
  </div>

  <h1 class="med-header"><%= @study.study_name %></h1>
  <strong><p>Study questions:</p></strong>

  <% @study.questions.each do |question| %>
    <% if !question.id.nil? %>
      <p class="display-question"><%= question.question %></p>
      <ul>
        <% question.answers.each do |answers| %>
          <li class="display-answer"><%= answers.text %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>

 <strong><p>Add some questions to your study</p></strong>
  <%= form_with model: [ @study, @study.questions.build ], local: true do |form| %>

    <% if @study.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@study.errors.count, "error") %> prohibited this question from being saved:
        </h2>
        <ul>
          <% @study.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p><%= form.text_field :question %></p>
    <p><%= form.submit %></p>

  <% end %>

  <% if @study.questions.count > 0 %>
    <p class="black-link"><%= link_to 'Get New Response', new_study_question_answer_path(study_id:  @study.id, question_id: @study.questions.first.id) %></p>
  <% end %>
</div>
