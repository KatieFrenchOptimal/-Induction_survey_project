
<h1>All Studies</h1>
<%= link_to 'New study', new_study_path %>
<table>
  <tr>
    <th>Title</th>
    <th colspan="2"></th>
  </tr>

  <% @studies.each do |study| %>
    <tr>
      <td><%= study.study_name %></td>
      <td><%= link_to 'Show', study_path(study) %></td>
      <td><%= link_to 'Edit', edit_study_path(study) %></td>
      <td><%= link_to 'Destroy', study_path(study),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>